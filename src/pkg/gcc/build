ver=10.2.0
type=tar.xz
src=https://ftp.gnu.org/gnu/gcc/gcc-$ver/gcc-$ver.$type

build() {
  export GCCOPTS="--with-arch=x86_64"

  ./configure $GCCOPTS \
    --prefix=$PREFIX \
    --libdir=/lib \
    --libexecdir=/lib \
    --enable-threads=posix \
    --enable-languages=c,c++,lto \

  make -j$JOBS
  make DESTDIR=$ROOT install
}