ver=1.2.2
type=tar.gz
src=https://musl.libc.org/releases/musl-$ver.$type
files=(lib/libc.so)

configure() {
  $CONFIGURE \
    --syslibdir=$LIB_PREFIX
}

install() {
  $INSTALL

  #ln -sf $LIB/libc.so $LIB/bin/ldd

  ln -sf $LIB/libc.so $LIB/libc.so.6
  ln -sf $LIB/libc.so $LIB/ld-linux-x86-64.so.2

  echo $LIB_PREFIX >> $ROOT/etc/ld-musl-$ARCH.path
}