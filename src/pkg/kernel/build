name=linux
ver=5.11.2
type=tar.xz
src=https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-$ver.$type
files=(arch/x86/boot/bzImage)

build() {
  cp $STUFF/config .config

  $MAKE
}

install() {
  if [[ -d $INSTALL/boot ]]; then
    INSTALL=$INSTALL/boot/vmlinuz
  else
    INSTALL=$INSTALL/vmlinuz
  fi

  cp arch/x86/boot/bzImage $INSTALL
}