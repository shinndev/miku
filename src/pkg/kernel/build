name=linux
ver=5.11.2
type=tar.xz
src=https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-$ver.$type

build() {
  if [[ -e arch/x86/boot/bzImage ]]; then
    return 0
  fi

  cp $STUFF/config .config
  make -j$JOBS
  if [[ ! -e arch/x86/boot/bzImage ]]; then
    return 1
  fi
}

install() {
  if [[ -d $TARGET/boot ]]; then
    TARGET=$TARGET/boot/vmlinuz
  else
    TARGET=$TARGET/vmlinuz
  fi

  cp arch/x86/boot/bzImage $TARGET
}
