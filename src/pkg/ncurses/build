ver=5.9
type=tar.gz
src=https://ftp.gnu.org/pub/gnu/ncurses/ncurses-$ver.$type
files=(lib/libncursesw.a)

configure() {
  export CFLAGS="$CFLAGS -D_GNU_SOURCE"

  $CONFIGURE \
    --includedir=$INCLUDE_PREFIX \
    --mandir=$MAN_PREFIX \
    --with-normal \
    --without-tests \
    --enable-widec \
    --with-shared \
    --enable-sigwinch \
    --with-fallbacks="linux vt100 xterm xterm256-color" \
    --disable-nls \
    --without-dlsym \
    --without-cxx-binding
}